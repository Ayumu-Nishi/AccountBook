<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- アプリ全体としては、アクションバーは表示する -->
    <style name="Base.Theme.AccountBook" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <style name="Theme.AccountBook" parent="Base.Theme.AccountBook" />

    <!-- 特定の画面でアクションバーを非表示にする場合のTheme -->
    <style name="Theme.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/mainColor</item>
    </style>>

    <!-- editTextの下線の設定 -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/gray</item>  <!-- 非フォーカス時 -->
        <item name="colorControlActivated">@color/black</item>  <!-- フォーカス時 -->
    </style>
</resources>